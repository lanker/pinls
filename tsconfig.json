{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["dom", "es2022"],
    "target": "es2022",

    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": false,

    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "removeComments": true,
    "stripInternal": true,

    "strict": true,

    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,

    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": "./",
  }
}
